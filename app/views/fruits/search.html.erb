  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

  <%= form_tag("/fruits/search", method: "post") do %>



  <%= label_tag(:species, "Search by species:") %>

<%= select_tag(:species, 
  options_for_select(
    [['Apple', 'apple'], 
    ['Orange', 'orange'],
    ['Pineapple', 'pineapple'],
    ['Banana', 'banana']])) %>
                    <br><br><br><br>



<%= select_tag(:and_or, 
  options_for_select(
    [['AND', 'AND'], 
    ['OR', 'OR']])) %>


  <%= radio_button_tag(:organic, "true") %>
<%= label_tag(:organic, "Organic") %>
<%= radio_button_tag(:organic, "false") %>
<%= label_tag(:organic, "Not organic") %>


  <%= submit_tag("Search") %>
<% end %>


